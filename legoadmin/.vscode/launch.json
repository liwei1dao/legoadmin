{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gateway",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/gateway", //配置Go项目启动文件路径，即main函数所在的.go文件的路径,${workspaceRoot}代表项目的根目录,也就是 /bin /pkg /src这三个文件夹所在的目录
            "args": [
                "-conf",
                "./conf/gateway.yaml"
            ],
            "cwd": "${workspaceFolder}/bin", //设置工作目录
            "internalConsoleOptions": "openOnSessionStart",
            "output": "${workspaceFolder}/bin/vsdebug_gateway0", //设置vscode调试时生成文件的路径
            "showGlobalVariables": true,
            "env": {}, //可以用来配置调试启动时所用的环境变
        },
        {
            "name": "robot",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/robot", //配置Go项目启动文件路径，即main函数所在的.go文件的路径,${workspaceRoot}代表项目的根目录,也就是 /bin /pkg /src这三个文件夹所在的目录
            "args": [
                "-conf",
                "./conf/robot.yaml"
            ],
            "cwd": "${workspaceFolder}/bin", //设置工作目录
            "internalConsoleOptions": "openOnSessionStart",
            "output": "${workspaceFolder}/bin/vsdebug_robot", //设置vscode调试时生成文件的路径
            "showGlobalVariables": true,
            "env": {}, //可以用来配置调试启动时所用的环境变
        },
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": ["gateway"]
        }
    ]
}